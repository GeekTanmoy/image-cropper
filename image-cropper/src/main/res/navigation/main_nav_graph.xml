<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/selectFragment">

    <fragment
        android:id="@+id/selectFragment"
        android:name="com.geektanmoy.imagecropper.fragments.SelectFragment"
        android:label="SelectFragment">
        <action
            android:id="@+id/action_selectFragment_to_previewFragment"
            app:destination="@id/previewFragment" />
    </fragment>

    <fragment
        android:id="@+id/previewFragment"
        android:name="com.geektanmoy.imagecropper.fragments.PreviewFragment"
        android:label="PreviewFragment"
        tools:layout="@layout/fragment_preview">
        <action
            android:id="@+id/action_previewFragment_to_cropFragment"
            app:destination="@id/cropFragment"
            app:popUpTo="@id/previewFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="imageUri"
            app:argType="string" />
        <argument
            android:name="action"
            app:argType="string" />
        <argument
            android:name="cropFlag"
            app:argType="boolean" />
        <argument
            android:name="cropUri"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/cropFragment"
        android:name="com.geektanmoy.imagecropper.fragments.CropFragment"
        android:label="CropFragment"
        tools:layout="@layout/fragment_crop">
        <action
            android:id="@+id/action_cropFragment_to_previewFragment"
            app:destination="@id/previewFragment"
            app:popUpTo="@id/cropFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="imageUri"
            app:argType="string" />
        <argument
            android:name="action"
            app:argType="string" />
    </fragment>

</navigation>